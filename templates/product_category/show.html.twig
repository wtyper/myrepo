{% extends 'base.html.twig' %}

{% block title %}{{product_category.name | trans}}{% endblock %}

{% block body %}
    <h1>{% trans %}ProductCategory{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ product_category.name |trans }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ product_category.description | trans}}</td>
            </tr>
            <tr>
                <th>{% trans %}Date Of Creation{% endtrans %}</th>
                <td>{{ product_category.dateOfCreation ? product_category.dateOfCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Date Of Last Modification{% endtrans %}</th>
                <td>{{ product_category.dateOfLastModification ? product_category.dateOfLastModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Products{% endtrans %}</th>
                <td>{%for products in product_category.products %}
                       <li> {{products.name |trans}} </li>  {% endfor %} </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary"  href="{{ path('product_category_index') }}"  role="button">{% trans %}Back to list{% endtrans %}</a>
    <a class="btn btn-primary"  href="{{ path('product_category_edit', {'id': product_category.id}) }}"  role="button">{% trans %}Edit{% endtrans %}</a>

    {{ include('product_category/_delete_form.html.twig') }}
{% endblock %}
