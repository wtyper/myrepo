<form method="post" action="{{ path('product_delete', {'id': product.id}) }}"
      onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button type="button" class="btn btn-light">{% trans %}Delete {% endtrans %}</button>
</form>
