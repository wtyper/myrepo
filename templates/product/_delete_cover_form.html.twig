<form method="post" id="product-cover-delete" action="{{ path('product_delete_cover', {'id': product.id}) }}"
      onsubmit="return confirm({% trans %}'Are you sure you want to delete this cover?'{% endtrans %});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-product-cover' ~ product.id) }}">
</form>