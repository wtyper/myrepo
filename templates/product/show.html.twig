{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>DateOfCreation</th>
            <td>{{ product.dateOfCreation ? product.dateOfCreation|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>DateOfLastModification</th>
            <td>{{ product.dateOfLastModification ? product.dateOfLastModification|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Cover</th>
            <td><a href="/img/{{ product.cover }}" target="_blank" class="mr-4 mt-4"><img src="/img/{{ product.cover }}"
                                                                                          alt=""{{ product.name }}"
                                                                                          style="max-width: 200px; max-height: 200px"></a>
            </td>
        </tr>
        <tr>
            <th>Category</th>
            <td><a href="{{ path('product_category_show', {'id': product.productCategory.id }) }}"> {{ product.productCategory.name }}</a></td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex mb-4">
        <h3 class="mr-4">Gallery</h3>
        <a href="{{ path('product_gallery_add', {id: product.id}) }}" class="btn btn-primary">Add image</a>
    </div>

    <a class="btn btn-primary"  href="{{ path('product_index') }}"  role="button">back to list</a>
    <a class="btn btn-primary"  href="{{ path('product_edit', {'id': product.id}) }}"  role="button">Edit</a>
    <br> <br>
    {{ render(controller(
        'App\\Controller\\WishListController::showWishListProductForm', {id: product.id}
    )) }}
 <br>
    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
