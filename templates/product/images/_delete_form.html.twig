<form method="post" action="{{ path('product_images_delete_one', {'product': product.id, 'image': image.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this image?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete-images-item' ~ image.id) }}">
    <button class="btn btn-primary">{% trans %}Delete{% endtrans %}</button>
</form>