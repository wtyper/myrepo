{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>DateOfCreation</th>
            <th>DateOfLastModification</th>
            <th>Category</th>
            <th>Wishlist</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td><a href="/img/{{ product.cover }}" target="_blank" class="mr-4 mt-4"><img src="/img/{{ product.cover }}"
                                                                                              alt=""{{ product.name }}"
                                                                                              style="max-width: 200px; max-height: 200px"></a>
                </td>
                <td>{{ product.dateOfCreation ? product.dateOfCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.dateOfLastModification ? product.dateOfLastModification|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('product_category_show', {'id': product.productCategory.id }) }}"> {{ product.productCategory.name }}</a>
                </td>
                <td>
                    {{ render(controller(
                        'App\\Controller\\WishListController::showWishListProductForm', {id: product.id}
                    )) }}
                </td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">Show</a> <br>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">Edit</a> <br>
                    <a href="{{ path('product_gallery_add', {id: product.id}) }}">Add image</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary"  href="{{ path('product_new') }}"  role="button">Create new</a>
{% endblock %}