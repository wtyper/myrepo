<li>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Wishlist
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            {% for id, productName in wishList %}
                <a class="dropdown-item" href="{{ path('product_show', {id: id}) }}">{{ productName }}</a>
            {% else %}
                <span class="ml-3">{{ 'Nothing addes to wishlist' }}</span>
            {% endfor %}
            {% if wishList %}
                <form method="post" action="{{ path('wishlist_clear') }}" class="dropdown-item">
                    <input type="hidden" name="_method" value="POST">
                    <button class="btn btn-sm btn-secondary">{{ 'Clear wishlist'}}</button>
                </form>
            {% endif %}
        </div>
    </div>
</li>