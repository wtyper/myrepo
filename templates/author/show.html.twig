{% extends 'baseBase.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>{{ author.name ~ ' ' ~ author.lastName }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>OriginCountry</th>
                <td>{{ author.originCountry }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ author.dateOfBirth ? author.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateOfDeath</th>
                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <h3>Books by {{ author.name ~ ' ' ~ author.lastname}}</h3>
    {% if author.books %}
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Country</th>
                <th>Available</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for book in author.books %}
                <tr class="striped-row">
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.description }}</td>
                    <td><a href="{{ path('genre_show', {id: book.genre.id }) }}">{{ book.genre.name }}</a></td>
                    <td>{{ book.yearOfPublishment ? book.yearOfPublishment|date('Y-m-d') : '' }}</td>
                    <td>{{ book.countryOfPublishment }}</td>
                    <td>{{ book.availability}}</td>
                    <td>
                        <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No records for this author</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        This author has no books yet<br>
    {% endif %}

    <a href="{{ path('author_index') }}">back to list</a>

    <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
